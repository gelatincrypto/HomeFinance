  @if (Categories.Count > 0)
  {
      <table class="table table-sm">
          <thead class="table-dark">
          <tr>
              <th scope="col">Name</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
          </tr>
          </thead>
          <tbody>
          @foreach (var category in Categories)
          {
              string color = category.IncomeOrExpense ? _incomeColor : _expenseColor;
              <tr style="background-color:@color">
                  <td class="align-middle">
                      @category.Name
                  </td>
                  <td class="align-middle">
                      <button type="button" class="btn btn-info" @onclick="() => RedirectToUpdate(category.Id)">Update</button>
                  </td>
                  <td class="align-middle">
                      <button type="button" class="btn btn-dark" @onclick="() => Delete(category.Id)">Delete</button>
                  </td>
              </tr>
          }
          </tbody>
      </table>
  }
  else
  {
      <span>
          Loading categories...
      </span>
  }
